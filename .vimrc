" tabstops
set expandtab
set tabstop=4
retab

" autoindent
set autoindent

" linenumbers
set number
highlight LineNr ctermfg=darkgrey

" disable search highlighting
set nohlsearch

" syntax highlighting
set syntax=on

" colors
set background=dark

" viminfo settings
set viminfo='50,<1000,n~/.viminfo
